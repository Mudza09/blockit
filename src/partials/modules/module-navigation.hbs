<!-- main navigation begin -->
<nav class="uk-navbar-container" data-uk-sticky="show-on-up: true; animation: uk-animation-slide-top;">
    <div class="uk-container uk-container-expand" data-uk-navbar>
        <div class="uk-navbar-left">
            {{> module-logo }}
        </div>
        <div class="uk-navbar-right">
            <ul class="uk-navbar-nav uk-visible@m">
                {{#each navigation.nav}}
                <li><a href="{{root}}{{link}}">{{title}}{{#if dropdown}}<i class="fas fa-chevron-down"></i>{{/if}}</a>{{#unless dropdown}}</li>{{/unless}}
                    {{#if dropdown.[0].standard}}
                    <div class="uk-navbar-dropdown">
                        <ul class="uk-nav uk-navbar-dropdown-nav">
                            {{#each dropdown.[0].standard}}
                            <li><a href="{{root}}{{link}}">{{title}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                    {{else}}
                    {{#if dropdown.[0].multiple}}
                    <div class="uk-navbar-dropdown uk-navbar-dropdown-width-2">
                        <div class="uk-navbar-dropdown-grid uk-child-width-1-2" data-uk-grid>
                            <div>
                                <ul class="uk-nav uk-navbar-dropdown-nav">
                                    {{#each dropdown.[0].multiple}}
                                    <li><a href="{{root}}{{link}}">{{title}}{{#with icon}}<i class="fas {{name}} fa-sm"></i>{{/with}}</a></li>
                                    {{/each}}
                                </ul>
                            </div>
                            <div>
                                <ul class="uk-nav uk-navbar-dropdown-nav">
                                    {{#each dropdown.[0].multiple-text}}
                                    <li><a class="uk-disabled" href="#">{{text}}</a></li>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                    {{/if}}
                {{#if dropdown}}</li>{{/if}}
                {{/each}}
            </ul>
            {{> module-navigation-mobile }}
        </div>
    </div>
</nav>
<!-- main navigation end -->
