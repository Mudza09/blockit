<!-- section content begin -->
<div class="uk-section uk-section-primary in-feature-section">
    <div class="uk-container">
        <div class="uk-grid in-feature-small" data-uk-grid>
            <div class="uk-width-1-1 uk-width-auto@s uk-width-1-2@m">
                <p class="uk-float-left uk-visible@m">{{content.hero.tech-text}}</p>
                <div class="in-feature-technology uk-float-left">
                    <div class="uk-flex uk-flex-center">
                        {{#each content.hero.tech-icon}}
                        <i class="fab fa-{{this}} fa-lg {{#unless @first}}uk-margin-left{{/unless}}"></i>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="uk-width-1-1 uk-width-expand@s uk-width-1-2@m">
                <div class="uk-float-right in-price">
                    <div class="uk-flex uk-flex-center">
                        <h3 class="uk-float-left"><span class="currency">$</span>{{content.hero.template-price}}</h3>
                        <p class="uk-float-left uk-visible@s">exclusive at Themeforest</p>
                        <a href="{{content.hero.template-buy-cta}}" class="uk-button uk-button-primary uk-border-rounded uk-margin-left uk-float-left">
                            <span><i class="fas fa-shopping-cart uk-margin-small-right"></i></span>
                            Purchase now
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-grid uk-grid-large uk-child-width-1-1 uk-child-width-1-3@m uk-text-center" data-uk-grid>
            <div class="uk-width-1-1 uk-margin-medium-bottom">
                <hr>
            </div>
            {{#each content.hero-feature}}
            <div>
                <div class="in-icon-wrapper transparent uk-margin-small-bottom">
                    <i class="fas fa-{{icon}} fa-3x"></i>
                </div>
                <h4 class="uk-margin-remove-top uk-margin-remove-bottom">{{heading}}</h4>
                <p class="uk-margin-remove-top">{{text}}</p>
            </div>
            {{/each}}
        </div>
    </div>
</div>
<!-- section content end -->
