<!-- section content begin -->
<div class="uk-section uk-margin-top">
    <div class="uk-container">
        <div class="grid">
            <div class="uk-width-1-1">
                <div class="uk-grid uk-flex uk-flex-center uk-margin-large-bottom">
                    <div class="uk-width-3-5@m uk-text-center">
                        <h1 class="uk-heading-small">{{content.greeting.prefix}} <span class="seo-hide">valuable</span><span
                            class="in-typing"
                            data-period="{{content.greeting.interval}}"
                            data-rotate='[ {{#each content.greeting.typing}}"{{this}}"{{#unless @last}},{{/unless}}{{/each}} ]'></span> {{content.greeting.suffix}}
                        </h1>
                        <p class="uk-text-lead">
                            {{content.greeting.text-lead}}
                            <a href="{{content.greeting.porto-url}}" class="uk-button in-envato-button">
                                <img src="img/in-envato.svg" data-src="img/in-envato.svg" alt="indonez-envato" width="32" height="32" data-uk-img>{{content.greeting.porto-btn}}
                            </a>
                        </p>
                    </div>
                </div>
                <div class="in-showcase-wrapper uk-background-center-left uk-background-contain" style="background-color: {{content.hero.bg-color}}; background-image: url({{root}}{{content.hero.bg-image}});">
                    <div class="uk-grid uk-grid-collapse uk-light" data-uk-grid>
                        <div class="uk-width-1-1 uk-width-1-4@s uk-width-1-3@m uk-visible@s">
                            <div class="uk-position-large uk-position-center-left">
                                <h2 class="uk-heading-small uk-margin-remove-bottom uk-visible@s">{{content.hero.template-name}}</h2>
                                <p class="uk-text-lead uk-margin-remove-top uk-visible@m">{{content.hero.template-desc}}</p>
                                <a href="{{root}}{{content.hero.template-url}}" class="uk-button uk-button-default uk-border-rounded in-margin-small-top@s">Item Details</a>
                            </div>
                        </div>
                        <div class="uk-width-1-1 uk-width-expand@s uk-width-2-3@m">
                            <img src="img/in-lazy-hero.png" data-src="{{content.hero.template-image}}" alt="{{content.hero.template-alt}}" width="713" height="457" data-uk-img>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- section content end -->
